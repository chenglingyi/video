<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/item_root_view"
    android:layout_height="wrap_content"

    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="5dp">
    <!--android:background="@drawable/selector_rv_item"-->
    <ImageView
        android:id="@+id/iv_album_complete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@mipmap/meinv"
        tools:tint="@sample/material_colors"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingBottom="5.0dip"
        android:text="name"

        android:textColor="@color/find_text_dark"
        android:textSize="13.0sp"
        tools:text="@tools:sample/full_names"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:drawablePadding="3.0dip"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="center"
        android:minHeight="16.0dip"
        android:text="des"
        android:textColor="#ff999999"
        android:textSize="12.0sp"
        tools:text="@tools:sample/us_phones"
         />

</LinearLayout>