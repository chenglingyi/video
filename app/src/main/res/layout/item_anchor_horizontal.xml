<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="left"
    android:orientation="horizontal"
    android:id="@+id/station_item"
    android:background="@drawable/bg_feed_list_seletor"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/orange"
        android:gravity="center"
        android:id="@+id/rank_num"
        android:layout_width="40.0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/album_rank_num" />
    <ImageView
        android:id="@+id/station_image"
        android:background="@mipmap/head_bg_playing"
        android:padding="2.0dip"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_marginTop="15.0dip"
        android:layout_marginRight="10.0dip"
        android:src="@mipmap/default_avatar_88"
        android:layout_toRightOf="@+id/rank_num"
        android:layout_centerVertical="true"
         />
    <TextView
        android:textSize="15.0sp"
        android:textColor="#ff4a4a4a"
        android:ellipsize="end"
        android:gravity="center|left"
        android:id="@+id/station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40.0dip"
        android:layout_marginBottom="4.0dip"
        android:maxLines="1"
        android:drawableRight="@mipmap/ic_v_oranget"
        android:drawablePadding="5.0dip"
        android:layout_toRightOf="@+id/station_image"
        android:layout_alignTop="@+id/station_image" />
    <TextView
        android:textSize="12.0sp"
        android:textColor="#ff999999"
        android:ellipsize="end"
        android:id="@+id/personDescribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10.0dip"
        android:layout_marginBottom="4.0dip"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/concern_btn"
        android:layout_below="@+id/station_name"
        android:layout_alignLeft="@+id/station_name" />
    <LinearLayout
        android:gravity="center|left"
        android:orientation="horizontal"
        android:id="@+id/status_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:layout_toLeftOf="@+id/concern_btn"
        android:layout_below="@+id/personDescribe"
        android:layout_alignLeft="@+id/station_name">
        <TextView
            android:textSize="12.0sp"
            android:textColor="@color/text_light"
            android:id="@+id/sounds_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:drawableLeft="@mipmap/ic_item_sounds_count"
            android:drawablePadding="3.0dip" />
        <TextView android:textSize="12.0sp"
            android:textColor="@color/text_light" android:id="@+id/fans_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@mipmap/icon_by_fans" android:drawablePadding="3.0dip" />
    </LinearLayout>
    <ToggleButton
        android:id="@+id/concern_btn"
        android:background="@drawable/btn_follow_selector"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="23.0dip"
        android:layout_height="36.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="25.0dip"
        android:textOn="@null"
        android:textOff="@null"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
    <ImageView
        android:id="@+id/arrow"
        android:background="@drawable/btn_more_selector"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="25.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
    <View
        android:id="@+id/border"
        android:background="@color/border_gray"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@+id/status_layout"
        android:layout_alignLeft="@+id/station_name" />
    <View
        android:id="@+id/divider"
        android:background="@color/bg_color"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:layout_below="@+id/status_layout" />
</RelativeLayout>